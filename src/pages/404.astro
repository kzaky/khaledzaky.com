---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <section class="max-w-4xl mx-auto px-6 py-32 text-center">
    <h1 class="text-6xl font-bold text-gray-200 dark:text-gray-800 mb-4">404</h1>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 font-serif">Page not found</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-flex items-center px-5 py-2.5 rounded-lg bg-primary-600 text-white text-sm font-medium hover:bg-primary-700 transition-colors"
    >
      Go home
    </a>
  </section>
</BaseLayout>
