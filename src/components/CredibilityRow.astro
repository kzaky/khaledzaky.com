---
interface Props {
  items: string[];
}

const { items } = Astro.props;
---

<div class="flex flex-wrap items-center gap-x-2 gap-y-1 text-xs text-gray-400 dark:text-gray-500">
  <span class="font-medium text-gray-500 dark:text-gray-400">Previously:</span>
  {items.map((item, i) => (
    <>
      <span>{item}</span>
      {i < items.length - 1 && <span class="text-gray-300 dark:text-gray-600">&middot;</span>}
    </>
  ))}
</div>
